{
  "extends": ["@significa/eslint-config", "plugin:cypress/recommended"],
  "settings": {
    "import/internal-regex": "^common|^config|^modules|^schemas|^services"
  },
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          ["internal", "parent", "sibling", "index"]
        ],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ],
    "@typescript-eslint/interface-name-prefix": [
      "error",
      { "prefixWithI": "always" }
    ]
  }
}
